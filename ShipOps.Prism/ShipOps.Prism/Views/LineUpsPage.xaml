                    HorizontalTextAlignment="Center"
                    Text="CARGO"
                    Padding="9"
                    BackgroundColor="#0F1D44"
                    />

        </Grid>
        <StackLayout>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="0.3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>

                </Grid.RowDefinitions>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GenDetommand}"/>
                </Grid.GestureRecognizers>
                <Label
                        Grid.Column="0"
                        Grid.Row="0"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Start"
                        Text="Chemstar iris"    
                    />
                <Label
                        Grid.Column="1"
                        Grid.Row="0"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Start"
                        Text="30 jun"    
                    />
                <Label
                        Grid.Column="2"
                        Grid.Row="0"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Start"
                        Text="Edible Oil"    
                    />


                <Label
                        Grid.Column="0"
                        Grid.Row="1"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Start"
                        Text="Nordic Lynx"    
                    />
                <Label
                        Grid.Column="1"
                        Grid.Row="1"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Start"
                        Text="30 jun"    
                    />
                <Label
                        Grid.Column="2"
                        Grid.Row="1"
