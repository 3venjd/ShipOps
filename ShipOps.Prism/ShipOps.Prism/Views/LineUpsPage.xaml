                        Grid.Column="1"
                        Grid.Row="2"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Start"
                        Text="30 jun"    
                    />
                <Label
                        Grid.Column="2"
                        Grid.Row="2"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Start"
                        Text="Steel"    
                    />


                <Label
                        Grid.Column="0"
                        Grid.Row="3"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Start"
                        Text="Ekaterina"    
                    />
