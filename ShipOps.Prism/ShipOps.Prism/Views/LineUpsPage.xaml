                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label
                    Grid.Column="0"
                    Grid.Row="0"
                    TextColor="White"
                    FontAttributes="Bold"
                    BackgroundColor="#0F1D44"
                    HorizontalTextAlignment="Center"
                    Padding="9"
                    Text="VESSEL"
                />
